create database kiosk;
show databases;
use kiosk;

create table menu(
	menu_id int(3) NOT NULL,
    menu_title varchar(20) NOT NULL,
    menu_price int(10) NOT NULL,
    menu_explain varchar(225),
    menu_category varchar(20),
    primary key (menu_id)
    );

create table users(
	users_id int(3) NOT NULL,
    users_name char(4) NOT NULL,
    phonenum varchar(20) NOT NULL,
    primary key (users_id)
    );

CREATE TABLE orders (
    order_id INT(3) NOT NULL,
    users_id INT(3) NOT NULL,
    order_menu_id INT(3) NOT NULL,
    order_price INT(10) NOT NULL,
    order_time TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    PRIMARY KEY (order_id),
    FOREIGN KEY (order_menu_id) REFERENCES menu(menu_id),
    FOREIGN KEY (users_id) REFERENCES users(users_id)
);
